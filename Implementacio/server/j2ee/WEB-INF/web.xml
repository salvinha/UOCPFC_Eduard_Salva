<!-- 	</filter-mapping> -->


	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
	<filter-mapping>
		<filter-name>ServerActionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>ControllerServlet</servlet-name>
		<servlet-class>edu.uoc.pfc2012.edusalva.controller.ControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
	
		
	<!-- No resource definitions here, only JDBC resources allowed, which MongoDB is not. -->

</web-app>
